<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFfff"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_logo_s"
        android:layout_width="354dp"
        android:layout_height="235dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        app:srcCompat="@drawable/logomain" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="314dp"
        android:layout_height="36dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="Copyright  2021 by ㈜AIM"
        android:textColor="#C1B1B1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_anim_msg"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:text="육아에 AI를 더하다"
        android:textColor="#FF8585"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_s" />

</androidx.constraintlayout.widget.ConstraintLayout>